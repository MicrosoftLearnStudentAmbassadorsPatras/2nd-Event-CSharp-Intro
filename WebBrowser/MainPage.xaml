<Page
    x:Class="WebBrowser.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebBrowser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <WebView x:Name="Browser" HorizontalAlignment="Left" Height="703" Margin="0,65,0,0" VerticalAlignment="Top" Width="1366" NavigationFailed="Browser_NavigationFailed"/>
        <TextBox x:Name="UrlTxt" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18" Width="1253" Height="42"/>
        <Button Content="GO" HorizontalAlignment="Left" Margin="1268,10,0,0" VerticalAlignment="Top" FontSize="18" Width="88" Click="Button_Click_1"/>

    </Grid>
</Page>
